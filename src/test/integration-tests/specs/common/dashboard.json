[
    {
        "title": "Set kbase session cookie (simulate login)",
        "selector": [],
        "action": "set-session-cookie",
        "params": {
            "name": "kbase_session",
            "path": "/",
            "value": "$token"
        }
    },
    {
        "title": "Ensure the logged-in menu appears, then open the user menu",
        "selector": {
            "type": "absolute",
            "path": [
                {
                    "type": "widget",
                    "value": "auth2_signin"
                },
                {
                    "type": "menu",
                    "value": "signed-in"
                },
                {
                    "type": "button",
                    "value": "avatar"
                }
            ]
        },
        "wait": 10000,
        "action": "click"
    },
    {
        "title": "Username should be now rendered",
        "selector": {
            "type": "absolute",
            "path": [
                {
                    "type": "widget",
                    "value": "auth2_signin"
                },
                {
                    "type": "menu",
                    "value": "signed-in"
                },
                {
                    "type": "label",
                    "value": "username"
                }
            ]
        },
        "waitForText": 10000,
        "text": "eapearson"
    },
    {
        "title": "close menu",
        "selector": {
            "type": "absolute",
            "path": [
                {
                    "type": "widget",
                    "value": "auth2_signin"
                },
                {
                    "type": "menu",
                    "value": "signed-in"
                },
                {
                    "type": "button",
                    "value": "avatar"
                }
            ]
        },
        "action": "click"
    },
    {
        "title": "wait for dashboard",
        "selector": {
            "type": "absolute", 
            "path": [
                {
                    "type": "plugin",
                    "value": "mainwindow"
                },
                {
                    "type": "label",
                    "value": "title"
                }
            ]
        },
        "waitForText": 5000
    }
]